<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.greylabsdev.pexwalls.presentation.screen.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_categoryImagesFragment"
            app:destination="@id/categoryPhotosFragment" />
        <action
            android:id="@+id/action_homeFragment_to_curatedPhotosFragment"
            app:destination="@id/curatedPhotosFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoryPhotosFragment"
        android:name="com.greylabsdev.pexwalls.presentation.screen.categoryphotos.CategoryPhotosFragment"
        android:label="CategoryImagesFragment"
        tools:layout="@layout/fragment_category_photos">
        <argument
            android:name="category"
            app:argType="com.greylabsdev.pexwalls.presentation.const.PhotoCategory" />
        <action
            android:id="@+id/action_categoryPhotosFragment_to_photoFragment"
            app:destination="@id/photoFragment" />
    </fragment>
    <fragment
        android:id="@+id/curatedPhotosFragment"
        android:name="com.greylabsdev.pexwalls.presentation.screen.curatedphotos.CuratedPhotosFragment"
        android:label="CuratedPhotosFragment"
        tools:layout="@layout/fragment_curated_photos">
        <action
            android:id="@+id/action_curatedPhotosFragment_to_photoFragment"
            app:destination="@id/photoFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.greylabsdev.pexwalls.presentation.screen.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_photoFragment"
            app:destination="@id/photoFragment" />
    </fragment>
    <fragment
        android:id="@+id/photoFragment"
        android:name="com.greylabsdev.pexwalls.presentation.screen.photo.PhotoFragment"
        android:label="PhotoFragment"
        tools:layout="@layout/fragment_photo"/>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.greylabsdev.pexwalls.presentation.screen.favorites.FavoritesFragment"
        android:label="FavoritesFragment"
        tools:layout="@layout/fragment_favorites">
        <action
            android:id="@+id/action_favoritesFragment_to_photoFragment"
            app:destination="@id/photoFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.greylabsdev.pexwalls.presentation.screen.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>